	file:/proc/stat:readline:1:cscanf:${ir},ADD, \
	file:/proc/stat:readline:1:cscanf:${so},ADD,DIV,100,MUL
+ file:/proc/stat:readline:1:cscanf:${so}, \
	file:/proc/stat:readline:1:cscanf:${us}, \
	file:/proc/stat:readline:1:cscanf:${ni},ADD, \
	file:/proc/stat:readline:1:cscanf:${sy},ADD, \
	file:/proc/stat:readline:1:cscanf:${id},ADD, \
